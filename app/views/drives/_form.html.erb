<div class="form"
<div class="row">
  <div class="span5">
    <%= form_for(@drive) do |f| %>
    <%= f.label :Organization_Name %>
    <%= f.text_field :org_name, :autofocus => true %>

    <%= f.label :About_Your_Organization %>
    <%= f.text_area :org_blurb %>

    <%= f.label :Email%>
    <%= f.email_field :org_email %>

    <%= f.label :Phone_Number %>
    <%= f.text_field :org_phone %>

    <%= f.label :Address %>
    <%= f.text_field :org_address %>

    <%= f.label :Zipcode %>
    <%= f.text_field :org_zipcode, size: "10x10" %>
  </div>
  <div class="span5">
    <%= f.label :Drive_Title %>
    <%= f.text_field :drive_title %>

    <%= f.label :About_your_drive %>
    <%= f.text_area :drive_blurb %>

    <%= f.label :Drop_Off_Location %>
    <%= f.text_field :drop_location %>

    <%= f.label :Start_Date %>
    <%= f.text_field :start_date %>

    <%= f.label :End_Date %>
    <%= f.text_field :end_date %>
    <div class="button"><%= f.submit "Create Drive!" %></div>
  </div>
</div>
<% end %>
</div>
